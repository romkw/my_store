<footer class="footer-spree border-top">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-4 mb-4">
        <h5 class="text-uppercase mb-3"><%= Spree.t(:contact_us) %></h5>
        <div class="footer-spree-contact">
          <p class="mb-2"><strong><%= current_store.name %></strong></p>
          <p class="mb-2">
            <i class="fas fa-envelope me-2"></i>
            <%= mail_to current_store.customer_support_email %>
          </p>
        </div>
      </div>
      
      <div class="col-12 col-md-4 mb-4">
        <h5 class="text-uppercase mb-3"><%= Spree.t(:navigation) %></h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= link_to Spree.t(:home), spree.root_path, class: 'text-muted' %>
          </li>
          <li class="mb-2">
            <%= link_to Spree.t(:products), spree.products_path, class: 'text-muted' %>
          </li>
          <li class="mb-2">
            <%= link_to Spree.t(:about_us), spree.root_path, class: 'text-muted' %>
          </li>
        </ul>
      </div>

      <div class="col-12 col-md-4 mb-4">
        <h5 class="text-uppercase mb-3"><%= Spree.t(:about_us) %></h5>
        <p class="text-muted">
          <%= Spree.t(:store_description) %>
        </p>
      </div>
    </div>
  </div>

  <div class="border-top">
    <div class="container">
    <div class="col-12 text-center">
      <%= render 'spree/shared/copyright' %>
    </div>
    </div>
  </div>
</footer>
